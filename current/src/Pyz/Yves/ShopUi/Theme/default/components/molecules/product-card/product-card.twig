{# @deprecated Use molecule product-item instead. #}
{% extends molecule('card') %}

{% define config = {
    name: 'product-card',
    tag: 'article'
} %}

{% define data = {
    name: required,
    abstractId: required,
    url: required,
    imageUrl: required,
    price: null,
    originalPrice: null,
    currencyIsoCode: null,
} %}

{% block cardClass %}{{config.jsName}}__container {{parent()}}{% endblock %}

{% block image %}
    <a href="{{data.url}}">
        {% include atom('thumbnail') with {
            class: 'js-product-color-group__image-' ~ data.abstractId,
            attributes: {
                alt: data.name,
                src: data.imageUrl,
                title: data.name,
            },
        } only %}
    </a>
{% endblock %}

{% block content %}
    {% block labels %}
        {% widget 'ProductAbstractLabelWidget' args [data.abstractId] only %}
        {% elsewidget 'ProductAbstractLabelWidgetPlugin' args [data.abstractId] only %} {# @deprecated Use ProductAbstractLabelWidget instead. #}
        {% endwidget %}
    {% endblock %}

    {% block groups %}
        {% widget 'ExampleProductColorSelectorWidget' args [data.abstractId, '.js-product-card__container'] use view('product-color-selector', 'ExampleProductColorGroupWidget') only %}
        {% elsewidget 'ExampleProductColorGroupWidgetPlugin' args [data.abstractId] only %} {# @deprecated Use ExampleProductColorSelectorWidget or ProductGroupWidget instead. #}
        {% endwidget %}
    {% endblock %}

    {% block name %}
        <strong>{{data.name}}</strong>
    {% endblock %}

    {% block sku %}{% endblock %}

    {% block rating %}
        {% widget 'ProductAbstractReviewWidget' args [data.abstractId] only %}
        {% elsewidget 'ProductAbstractReviewWidgetPlugin' args [data.abstractId] only %} {# @deprecated Use ProductAbstractReviewWidget instead. #}
        {% endwidget %}
    {% endblock %}

    {% block price %}
        <p>
            {% if can('SeePricePermissionPlugin') %}
                {% include molecule('money-price') with {
                    data: {
                        amount: data.price,
                        originalAmount: data.originalPrice is empty ? null : data.originalPrice,
                        currencyIsoCode: data.currencyIsoCode,
                    }
                } only %}
            {% else %}
                {{ 'customer.access.cannot_see_price' | trans }}
            {% endif %}
        </p>
    {% endblock %}
{% endblock %}
